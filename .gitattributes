# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Package files
package.json text eol=lf
package-lock.json text eol=lf -diff

# Config files
*.config.js text eol=lf
*.config.ts text eol=lf
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Docker files
Dockerfile* text eol=lf
*.dockerfile text eol=lf

# Kubernetes manifests
*.yaml text eol=lf
*.yml text eol=lf

# Shell scripts
*.sh text eol=lf

# Batch scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary

# Font files
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary

# Generated files
*.map binary
dist/* linguist-generated=true
build/* linguist-generated=true
coverage/* linguist-generated=true

# Agent swap files (treat as text but don't diff)
agent_swap.json text -diff
agent_swap.json.bak* text -diff

# Lock files (don't diff)
package-lock.json -diff
yarn.lock -diff

# Large datasets (use Git LFS if needed)
*.db filter=lfs diff=lfs merge=lfs -text
*.sqlite filter=lfs diff=lfs merge=lfs -text
*.sqlite3 filter=lfs diff=lfs merge=lfs -text
training_data/* filter=lfs diff=lfs merge=lfs -text
models/* filter=lfs diff=lfs merge=lfs -text
*.model filter=lfs diff=lfs merge=lfs -text 